pipeline {
    agent any

    environment {
        COMPOSE_FILE = 'docker-compose.yml'
        CONTAINER_NAME = "cloudcomputingg"
        IMAGE_NAME = "cloudcomputingg"
        // tambahan environment jika perlu:
        // APP_ENV = 'production'
        // DB_HOST = 'mysql'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/akanabot/cloudcomptw.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker compose -f ${COMPOSE_FILE} build"
            }
        }

        stage('Migrate Database') {
            steps {
                // ganti 'php' jika service kamu pakai nama lain
                sh "docker compose exec -T php php artisan migrate --force"
            }
        }

        stage('Run Tests') {
            steps {
                sh "docker compose exec -T php php artisan test"
            }
        }

        stage('Deploy') {
            steps {
                sh "docker compose -f ${COMPOSE_FILE} up -d"
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline selesai dengan sukses!'
        }
        failure {
            echo '❌ Pipeline gagal, silakan cek log!'
        }
    }
}
